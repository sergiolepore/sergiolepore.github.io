@import 'nib'

@import '_base/utilities'
@import '_base/color'
@import '_base/font'

html
  height 100%

body
  background #232323
  width 100%
  height 100%
  padding 0px
  margin 0px

.wrapper
  position relative
  background -o-radial-gradient(#545454 0%, #000 100%)
  background -moz-radial-gradient(#545454 0%, #000 100%)
  background -webkit-radial-gradient(#545454 0%, #000 100%)
  background -ms-radial-gradient(#545454 0%, #000 100%)
  background radial-gradient(#545454 0%, #000 100%)
  width 100%
  min-height 100%
  padding 30px 0px 55px 0px
  @media screen and (max-width 800px)
    padding 1px 0px 1px 0px
  margin 0px
  vendor('box-sizing', border-box)

.label
  position absolute
  height 35px
  width 168px
  top 15px
  left 15px
  border 2px solid #aaa
  vendor('box-sizing', border-box)
  @media screen and (max-width 800px)
    height 25px

.label-left
  position absolute
  background #30667C
  width 50%
  height 100%
  top 0px
  left 0px
  text-align right
  color #aaa
  font-size 20px
  font-family Ubuntu
  text-transform uppercase
  font-weight lighter
  padding 6px 5px 0px 0px
  vendor('box-sizing', border-box)
  @media screen and (max-width 800px)
    font-size 1em
    padding 2px 2px 0 0

.label-right
  position absolute
  width 50%
  min-height 100%
  top 0px
  right 0px
  text-align left
  color #aaa
  font-size 20px
  font-family Ubuntu
  font-weight lighter
  padding 6px 0px 0px 5px
  vendor('box-sizing', border-box)
  @media screen and (max-width 800px)
    font-size 1em
    padding 2px 0 0 2px

.hal-border
  position relative
  height 618px
  width 208px
  margin 0px auto 55px auto
  border-radius 2px
  background-image -o-linear-gradient(-90deg, #AEAEAE 0%, #787878 12%, #717171 100%)
  background-image -moz-linear-gradient(-90deg, #AEAEAE 0%, #787878 12%, #717171 100%)
  background-image -webkit-linear-gradient(-90deg, #AEAEAE 0%, #787878 12%, #717171 100%)
  background-image -ms-linear-gradient(-90deg, #AEAEAE 0%, #787878 12%, #717171 100%)
  background-image linear-gradient(-180deg, #AEAEAE 0%, #787878 12%, #717171 100%)
  box-shadow(1px 3px 5px 1px rgba(0,0,0,0.81))
  @media screen and (max-width 800px)
    height 300px

.hal-plate
  position absolute
  top 4px
  left 4px
  height 610px
  width 200px
  border-radius 1px
  background #1E1E1E
  box-shadow(inset 0px 3px 5px 2px rgba(0,0,0,0.69))
  @media screen and (max-width 800px)
    height 292px

.speakerbox
  position absolute
  left 0px
  bottom 0px
  height 136px
  width 200px
  background #727272
  box-shadow(inset 0px 1px 3px 0px rgba(255,254,255,0.41))
  @media screen and (max-width 800px)
    height 55px

.speakerbg
  position absolute
  height 132px
  width 100%
  top 4px
  left 0px
  background-image -o-linear-gradient(-90deg, #323232 0%, #1e1e1e 100%)
  background-image -moz-linear-gradient(-90deg, #323232 0%, #1e1e1e 100%)
  background-image -webkit-linear-gradient(-90deg, #323232 0%, #1e1e1e 100%)
  background-image -ms-linear-gradient(-90deg, #323232 0%, #1e1e1e 100%)
  background-image linear-gradient(-180deg, #323232 0%, #1e1e1e 100%)
  @media screen and (max-width 800px)
    height 51px

.speakerlat
  position absolute
  height 100%
  width 100%
  top 0px
  left 0px
  background-size 6px 6px
  background-image -o-linear-gradient(0deg, #444 0%, #444 20%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, rgba(0,0,0,0.00) 29%)
  background-image -moz-linear-gradient(0deg, #444 0%, #444 20%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, rgba(0,0,0,0.00) 29%)
  background-image -webkit-linear-gradient(0deg, #444 0%, #444 20%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, rgba(0,0,0,0.00) 29%)
  background-image -ms-linear-gradient(0deg, #444 0%, #444 20%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, rgba(0,0,0,0.00) 29%)
  background-image linear-gradient(-90deg, #444 0%, #444 20%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, rgba(0,0,0,0.00) 29%)
  background-repeat repeat

.speakerlong
  position absolute
  height 100%
  width 100%
  top 0px
  left 0px
  background-size 6px 6px
  background-image -o-linear-gradient(-90deg, #444 0%, #444 20%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, rgba(0,0,0,0.00) 29%)
  background-image -moz-linear-gradient(-90deg, #444 0%, #444 20%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, rgba(0,0,0,0.00) 29%)
  background-image -webkit-linear-gradient(-90deg, #444 0%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, #444 20%, rgba(0,0,0,0.00) 29%)
  background-image -ms-linear-gradient(-90deg, #444 0%, #444 20%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, rgba(0,0,0,0.00) 29%)
  background-image linear-gradient(-180deg, #444 0%, #444 20%, rgba(0,0,0,0.27) 20%,rgba(0,0,0,0.27) 29%, rgba(0,0,0,0.00) 29%) 
  background-repeat repeat
  box-shadow(inset 0px 2px 5px 2px rgba(0,0,0,0.55))

.outersocket
  position absolute
  left 12px
  top 268px
  height 176px
  width 176px
  border-radius 1000px
  background-image -o-linear-gradient(-90deg, #C5ACAC 0%, #B1A8A8 34%, #564D4D 50%, #3F3535 100%)
  background-image -moz-linear-gradient(-90deg, #C5ACAC 0%, #B1A8A8 34%, #564D4D 50%, #3F3535 100%)
  background-image -webkit-linear-gradient(-90deg, #C5ACAC 0%, #B1A8A8 34%, #564D4D 50%, #3F3535 100%)
  background-image -ms-linear-gradient(-90deg, #C5ACAC 0%, #B1A8A8 34%, #564D4D 50%, #3F3535 100%)
  background-image linear-gradient(-180deg, #C5ACAC 0%, #B1A8A8 34%, #564D4D 50%, #3F3535 100%)
  box-shadow(0px 2px 2px 0px rgba(0,0,0,0.81))
  @media screen and (max-width 800px)
    top 50px

.innersocket
  position absolute
  top 5px
  left 5px
  height 166px
  width 166px
  border-radius 1000px 
  background-image -o-linear-gradient(-90deg, #644A4A 0%, #6A5151 44%, #BCA9A9 53%, #CBBABA 100%)
  background-image -moz-linear-gradient(-90deg, #644A4A 0%, #6A5151 44%, #BCA9A9 53%, #CBBABA 100%)
  background-image -webkit-linear-gradient(-90deg, #644A4A 0%, #6A5151 44%, #BCA9A9 53%, #CBBABA 100%)
  background-image -ms-linear-gradient(-90deg, #644A4A 0%, #6A5151 44%, #BCA9A9 53%, #CBBABA 100%)
  background-image linear-gradient(-180deg, #644A4A 0%, #6A5151 44%, #BCA9A9 53%, #CBBABA 100%)

#eye
  position absolute
  top 8px
  left 8px
  height 150px
  width 150px
  border-radius 1000px
  background -o-radial-gradient(#FFFeee 0%, #FFF000 5%, #FF0000 8%, #870000 22%, #290000 27%, #290707 37%, #3D0A0A 42%, #270C0C 47%, #1E0C0C 100%)
  background -moz-radial-gradient(#FFFeee 0%, #FFF000 5%, #FF0000 8%, #870000 22%, #290000 27%, #290707 37%, #3D0A0A 42%, #270C0C 47%, #1E0C0C 100%)
  background -webkit-radial-gradient(#FFFeee 0%, #FFF000 5%, #FF0000 8%, #870000 22%, #290000 27%, #290707 37%, #3D0A0A 42%, #270C0C 47%, #1E0C0C 100%)
  background -ms-radial-gradient(#FFFeee 0%, #FFF000 5%, #FF0000 8%, #870000 22%, #290000 27%, #290707 37%, #3D0A0A 42%, #270C0C 47%, #1E0C0C 100%)
  background radial-gradient(#FFFeee 0%, #FFF000 5%, #FF0000 8%, #870000 22%, #290000 27%, #290707 37%, #3D0A0A 42%, #270C0C 47%, #1E0C0C 100%)
  border 1px solid #111
  vendor('box-sizing',border-box)

.eyeshinebig
  position absolute
  height 20px
  width 20px
  border-radius 1000px
  background rgba(255,255,255,0.55)
  top 20%
  left 25%

.eyeshinesmall
  position absolute
  height 8px
  width 8px
  border-radius 1000px
  background rgba(255,255,255,0.55)
  top 12%
  left 14% 

.quote
  color #30667C 
  font-family Ubuntu 
  font-size 2em 
  text-align center
  @media screen and (max-width 800px)
    font-size 1.5em
  a
    text-decoration none
    color #347B98 
    &:hover
      text-decoration underline
      color #347B98 

h1
  color #fd0d00
  font-family Ubuntu
  font-size 2em
  text-align center
  @media screen and (max-width 800px)
    font-size 1.5em
    padding 0
    margin 5px 0 10px 0px

h4
  font-family Ubuntu
  text-align center
  font-size 1.3em
  font-weight normal
  @media screen and (max-width 800px)
    padding 0
    margin 10px 0 10px 0
  a
    text-decoration none
    color #347b98
    &:hover
      text-decoration underline